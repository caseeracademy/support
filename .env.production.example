APP_NAME="Caseer Academy Support"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://support.caseer.academy

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
# For production, use MySQL or PostgreSQL
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=caseer_support
DB_USERNAME=caseer_user
DB_PASSWORD=your_secure_database_password

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log

# Cache Configuration
CACHE_STORE=database
CACHE_PREFIX=

FILESYSTEM_DISK=local

QUEUE_CONNECTION=database

# Mail Configuration (for notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="support@caseer.academy"
MAIL_FROM_NAME="${APP_NAME}"

# Caseer Academy API Configuration
CASEER_API_URL=https://caseer.academy/wp-json/my-app/v1
CASEER_API_SECRET=your_api_secret_key_here

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
